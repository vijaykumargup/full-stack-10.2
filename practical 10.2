<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Mini Blog Platform</title>

<style>
body {
  font-family: Arial, sans-serif;
  background: #f6f8ff;
  padding: 20px;
}

.container {
  max-width: 600px;
  margin: auto;
  background: white;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

input, textarea {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
}

button {
  padding: 10px 14px;
  margin: 5px 0;
  background: #0b66c3;
  color: white;
  border: none;
  border-radius: 6px;
  cursor: pointer;
}

.post {
  background: #fff;
  border: 1px solid #e2e8f0;
  padding: 10px;
  border-radius: 6px;
  margin-bottom: 12px;
}

.comment-box input {
  width: 80%;
  padding: 6px;
}

.comment-box button {
  background: #106981;
}

.comment {
  background: #f1f5f9;
  padding: 6px;
  border-radius: 5px;
  margin: 6px 0;
  font-size: 14px;
}
</style>
</head>

<body>
<div class="container">
<h1>Mini Blog Platform</h1>

<div class="profile">
<label><strong>Username:</strong></label><br>
<input type="text" id="username" placeholder="Enter your name" />
</div>

<h3>Create a Blog Post</h3>
<textarea id="postContent" placeholder="Write your blog post here..."></textarea>
<button onclick="addPost()">Publish Post</button>

<h2>All Posts</h2>
<div id="posts"></div>
</div>

<script>
let posts = [];

function addPost() {
  const content = document.getElementById("postContent").value.trim();
  const username = document.getElementById("username").value.trim() || "Anonymous";

  if (!content) {
    alert("Please write something to post!");
    return;
  }

  const post = {
    id: Date.now(),
    author: username,
    content,
    comments: []
  };

  posts.unshift(post);
  renderPosts();
  document.getElementById("postContent").value = "";
}

function addComment(postId) {
  const input = document.getElementById("comment-" + postId);
  const text = input.value.trim();
  if (!text) return;

  const post = posts.find(p => p.id === postId);
  post.comments.push(text);
  input.value = "";
  renderPosts();
}

function renderPosts() {
  const postsDiv = document.getElementById("posts");
  postsDiv.innerHTML = "";

  posts.forEach(post => {
    const div = document.createElement("div");
    div.className = "post";

    div.innerHTML = `
      <strong>${post.author}</strong><br>
      <p>${post.content}</p>

      <div><strong>Comments:</strong></div>
      ${post.comments.map(c => `<div class="comment">â€¢ ${c}</div>`).join("")}

      <div class="comment-box">
        <input id="comment-${post.id}" placeholder="Write a comment..."/>
        <button onclick="addComment(${post.id})">Comment</button>
      </div>
    `;

    postsDiv.appendChild(div);
  });
}
</script>

</body>
</html>
